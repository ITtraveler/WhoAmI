<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg2" >

    <ImageView
        android:id="@+id/iv_click_lu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/logo_touch_center"
        android:clickable="true" />

    <ImageView
        android:id="@+id/iv_click_ru"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:background="@drawable/logo_touch_center"
        android:clickable="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_click_ld"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/logo_touch_center"
        android:clickable="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_click_rd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/logo_touch_center"
        android:clickable="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/text_guide_style"
        android:text="请点击圆圈区域" />

</RelativeLayout>