<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recognize_touch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg2"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/recognize_touch_view"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:alpha="0.8"
        android:background="@drawable/logo_touch_center" />

    <TextView
        android:id="@+id/recognize_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recognize_touch_view"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="72dp"
        android:text="请点击圆心"
        style="@style/text_guide_style" />

</RelativeLayout>